{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "maxWorkers": 4,
  "testTimeout": 10000,
  "bail": false,
  "detectOpenHandles": true,
  "forceExit": true,
  "verbose": false,
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.module.ts"
  ]
}