{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "globalSetup": "<rootDir>/global-setup.ts",
  "globalTeardown": "<rootDir>/global-teardown.ts",
  "maxWorkers": 1,
  "testTimeout": 100000,
  "bail": false,
  "detectOpenHandles": true,
  "forceExit": true,
  "verbose": false,
  "testPathIgnorePatterns": ["/node_modules/"],
  "collectCoverageFrom": [
    "src/**/*.{js,ts}",
    "!src/main.ts",
    "!**/node_modules/**",
    "!**/test/**",
    "!**/*.module.ts",
    "!**/*.controller.ts",
    "!**/*.service.ts",
    "!**/*.dto.ts",
    "!**/*.entity.ts",
    "!**/interfaces/**",
    "!**/constants/**"
  ]
}