enum Days {
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

model CourseSection {
  id String @id @default(uuid()) @db.Uuid

  name String

  /// @DtoApiHidden
  user     User?   @relation(fields: [mentorId], references: [id], onDelete: SetNull)
  mentorId String? @db.Uuid // make mentor optional

