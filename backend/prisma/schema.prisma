  authorId     String     @db.Uuid
  author       User       @relation(fields: [authorId], references: [id])

  content Json

  parentId String?          @db.Uuid
  parent   DiscussionPost?  @relation("DiscussionPostReplies", fields: [parentId], references: [id])
